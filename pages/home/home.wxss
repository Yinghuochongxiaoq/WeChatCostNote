page {
    background-color: #efeff4;
    font-size: 30rpx;
}

.list-card {
    position: relative;
    overflow: hidden;
    width: 100%;
    border-radius: 2px;
    background-color: #fff;
    background-clip: padding-box;
    box-shadow: 0 1px 2px rgba(0, 0, 0, .3);
    align-items: center;
    display: inline-block
}

.list-card-active {
    background: #FBF9FE;
}

.tui-fl {
    float: left;
}

.tui-fr {
    float: right;
}

.number_border {
    -ms-border-radius: 50%;
    border-radius: 50%;
    height: 60rpx;
    width: 60rpx;
    margin-top: 40rpx;
    display: inline-block;
    vertical-align: middle;
    color: #ffffff;
    text-align: center;
    font-size: 40rpx;
}

.ft-bg-green {
    color: #1BB97D;
}

.bg-green {
    background: #1BB97D;
}

.ft-bg-danger {
    color: #FF7B0E;
}

.bg-danger {
    background: #FF7B0E;
}

.mg-10 {
    margin: 5rpx 10rpx;
}

.mg--5 {
    margin: -5rpx 10rpx;
}

.pd-10 {
    padding: 10rpx;
}

.arrow {
    width: 8px;
    height: 8px;
    border-bottom: 2px solid #999;
    border-right: 2px solid #999;
    transform: rotate(45deg);
    margin-top: 15rpx;
}

.list-right {
    margin-left: 10rpx;
}

.list-item-title {
    display: block;
    height: 40rpx;
    line-height: 40rpx;
    overflow: hidden;
    font-size: 30rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.list-item-time,
.list-item-type {
    display: block;
    height: 50rpx;
    line-height: 50rpx;
    overflow: hidden;
    font-size: 25rpx;
    color: #8f8f94;
}

.block-ft {
    display: block;
    height: 25rpx;
    line-height: 25rpx;
    overflow: hidden;
    font-size: 25rpx;
    color: #8f8f94;
}

.ft-bolder {
    font-weight: bolder;
}

.list-text-ft {
    text-align: center;
    line-height: 140rpx;
}

.picker {
    margin-left: 20rpx;
}

.search-list-inline {
    position: relative;
    overflow: hidden;
    width: 100%;
    border-radius: 2px;
    background-color: #fff;
    background-clip: padding-box;
    box-shadow: 0 1px 2px rgba(0, 0, 0, .3);
    align-items: center;
}

.list-inline {
    display: flex;
    flex-direction: row;
}

.list-column {
    display: flex;
    flex-direction: column;
    text-align: center;
}