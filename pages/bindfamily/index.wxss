.one-tag {
    font-size: 14px;
    margin: 30px 5px 20px 15px;
}

.container {
    display: block;
    width: 235px;
    height: 40px;
    margin: 20px auto;
    position: relative;
    border: 1px solid #eee;
    font-weight: bolder;
    font-size: 14px;
    color: red;
    padding-top: 13px;
}





/*button*/
.btn {
    width: 80%;
    padding: 20rpx 0;
    border-radius: 10rpx;
    text-align: center;
    margin: 40rpx 10%;
    background: #0C1939;
    color: #fff;
  }
  /*mask*/
  .drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 900;
    background:rgba(0,0,0,.7);
    overflow: hidden;
  }
  /*content*/
  .drawer_attr_box {
    width: 100%;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 1001;
    background: #fff;
  }
  .drawer_content {
    padding: 20rpx 40rpx;
    height: 470rpx;
    overflow-y: scroll;
  }
  .drawer_title{
    padding:20rpx;
    font:42rpx "microsoft yahei";
    text-align: center;
  }
  .line{
    border-bottom: 1px solid #f8f8f8;
  }