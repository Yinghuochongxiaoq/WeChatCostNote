<i-tabs current="{{ costcontentmodel.SpendType }}" bindchange="handleChange">
    <i-tab key="0" title="支出"></i-tab>
    <i-tab key="1" title="收入"></i-tab>
    <i-tab key="2" title="资金转移"></i-tab>
</i-tabs>
<i-panel>
    <view class="i-cell i-input list-inline">
        <view class="i-cell-hd i-input-title">支出时间</view>
        <picker mode="multiSelector" value="{{dateTime1}}" bindchange="changeDateTime1"
            bindcolumnchange="changeDateTimeColumn1" range="{{dateTimeArray1}}" class="weight-90">
            <view class="i-input-input i-cell-bd">
                {{dateTimeArray1[0][dateTime1[0]]}}-{{dateTimeArray1[1][dateTime1[1]]}}-{{dateTimeArray1[2][dateTime1[2]]}}
                {{dateTimeArray1[3][dateTime1[3]]}}:{{dateTimeArray1[4][dateTime1[4]]}}
            </view>
        </picker>
        <view class='arrow-right'></view>
    </view>
    <i-input value="{{ value1 }}" title="收货人" autofocus placeholder="名字" />
    <i-input value="{{ value2 }}" type="number" title="联系电话" placeholder="请输入手机号" />
    <i-input value="{{ value3 }}" type="textarea" title="详细地址" placeholder="请输入详细地址(最多50字)" maxlength="50" />
    <i-input value="{{ value4 }}" title="用户信息" disabled />
</i-panel>