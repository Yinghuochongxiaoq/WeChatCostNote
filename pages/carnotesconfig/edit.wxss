@import "../home/home.wxss";

.i-sticky-demo,
page {
    width: 100%;
    height: 100%;
    background: #FFF;
}

.i-sticky-demo-item {
    border-bottom: #dddee1 solid 1px;
    font-size: 14px;
    padding: 0 30rpx;
}

.sign_activity {
    text-align: center;
    background-color: #FFF;
    display: flex;
    flex-direction: row;
    justify-content: center;
    font-size: 32rpx;
    z-index: 1;
}

.right-border {
    border-right: 1rpx solid #dddee1;
}

.c-span3 {
    width: 30%;
    -webkit-box-flex: 4;
    -webkit-flex: 4 4 auto;
    text-align: right;
    overflow: hidden;
    padding: 10rpx 30rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.c-span9 {
    width: 70%;
    text-align: left;
    -webkit-box-flex: 8;
    padding: 10rpx 30rpx;
    -webkit-flex: 8 8 auto;
}

.wode_item_wrap {
    background-color: #FFF;
    font-size: 14px;
    margin-top: 10px;
    border-top: 1px solid #E5E5E5;
}