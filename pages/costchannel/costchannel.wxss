@import "../home/home.wxss";
page {
    width: 100%;
    height: 100%;
}

.container {
    width: 100%;
    height: 100%;
}

.nav {
    height: 80rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #f7f7f7;
    font-size: 30rpx;
    white-space: nowrap;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
}

.nav-item {
    min-width: 20%;
    display: inline-block;
    text-align: center;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

.nav-item.active {
    color: #1BB97D;
    border-bottom: #2d8cf0 1rpx solid;
}

.tab-box {
    height: 100%;
    box-sizing: border-box;
}

.tab-content {
    overflow-y: scroll;
}