/* pages/Calendar/Calendar.wxss */
/* 打卡日历 */
@import '../mod/calendar.wxss';
@import '../../components/ui-calendar.wxss';

page {
  background-color: #f5f6f7;
}

.cm-modal {
  position: relative;
  background: #fff;
  padding-bottom: 20rpx;
}

/* 日历部分 */
.calendar-wrapper-box {
  background-color: #fff;
  width: 100%;
  position: relative;
}

.cm-day-list .item-border {
  border: 1rpx solid #dddee1;
}

.cm-day-list .radius-bg-danger .cm-field-title {
  background-color: #FF7B0E;
  height: 80rpx;
  line-height: 80rpx;
  width: 80rpx;
  border-radius: 40rpx;
  color: #fff;
  margin: 0 auto;
}

.cm-day-list .cm-field-title {
  height: 80rpx;
}

/* 统计天数部分 */
.count .day_number {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.count .day_number .day {
  margin-top: 50rpx;
}

.count {
  padding: 30rpx;
  display: flex;
  text-align: center;
  border-radius: 10px;
  flex-direction: column;
  justify-content: center;
  background-color: #fff;
  align-items: center;
  margin-top: 20rpx;
}

.count .number {
  color: red;
  font-size: 60rpx;
  background-color: #fff;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 20rpx;
}

.count text {
  margin: 10rpx;
}

/* 列表部分 */
.elips {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.foot-center {
  text-align: center;
  align-items: center;
  width: 150rpx;
  margin: 0 auto;
  position: relative;
}

/*上箭头*/
.top-arrow1,
.top-arrow2 {
  width: 0;
  height: 0;
  display: block;
  position: absolute;
  top: 0;
  z-index: 5;
  /*兼容ie8-*/
  border-top: 20rpx transparent dashed;
  border-left: 20rpx transparent dashed;
  border-right: 20rpx transparent dashed;
  border-bottom: 20rpx white solid;
  overflow: hidden;
}

.top-arrow1 {
  border-bottom: 20rpx #00b25a solid;
}

.top-arrow2 {
  top: 1px;
  /*重要*/
  border-bottom: 20rpx white solid;
}

/*下箭头*/
.bottom-arrow1,
.bottom-arrow2 {
  width: 0;
  height: 0;
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 5;
  /*兼容ie8-*/
  border-bottom: 20rpx transparent dashed;
  border-left: 20rpx transparent dashed;
  border-right: 20rpx transparent dashed;
  border-top: 20rpx white solid;
  overflow: hidden;
}

.bottom-arrow1 {
  top: 1px;
  /*重要*/
  border-top: 20rpx #00b25a solid;
}

.bottom-arrow2 {
  border-top: 20rpx white solid;
}