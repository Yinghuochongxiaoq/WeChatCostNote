page {
    background-color: #f5f6f7;
    height: 100%;
    letter-spacing: 1px;
}

.personal_info {
    padding: 20rpx 0;
    background-color: #FFF;
}

.photo_wrap {
    text-align: center;
}

.photo {
    width: 90px;
    height: 90px;
    border-radius: 90px;
}

.nickname {
    margin-top: 15px;
    text-align: center;
    color: #696969;
}

.sign_activity {
    text-align: center;
    background-color: #FFF;
    margin-top: 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    font-size: 32rpx;
}

.right-border {
    border-right: 1rpx solid #dddee1;
}

.c-span3 {
    width: 30%;
    -webkit-box-flex: 4;
    -webkit-flex: 4 4 auto;
    text-align: right;
    padding: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.c-span9 {
    width: 70%;
    text-align: left;
    padding: 30rpx;
    -webkit-box-flex: 8;
    -webkit-flex: 8 8 auto;
}

.wode_item_wrap {
    background-color: #FFF;
    font-size: 14px;
    margin-top: 10px;
    border-top: 1px solid #E5E5E5;
}